<mujoco model="rotating_link">
    <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
    <option timestep="0.01" gravity="0 0 -9.83"/>
    <worldbody>
        <body name="pivot" pos="0 0 0">
            <!-- Fixed base -->
            <geom type="sphere" size="0.05" rgba="0.5 0.5 0.5 1"/>
            <!-- Rotating link -->
            <body name="link" pos="0.5 0 0">
                <joint name="link_joint" type="hinge" axis="0 0 1" pos="0 0 0"/>
                <geom type="capsule" size="0.5 0.05" rgba="0 0 1 1"/>
            </body>
        </body>
    </worldbody>
    <actuator>
        <motor joint="link_joint" ctrlrange="-1.0 1.0"/>
    </actuator>
</mujoco>